{% extends "page.twig" %}

{% block content %}
  <article>
    <h1 class="page-title">{{page_title}}</h1>
    <div class="post-loop">
      {% for post in posts %}
        <div class="shadow-box post-box">
          {% include ['teases/tease-'~post.post_type~'.twig', 'teases/tease.twig'] %}
        </div>
      {% endfor %}
    </div>
    {% include 'partials/pagination.twig' with {
      'posts' : posts
    } %}
  </article>
{% endblock %}
