{% extends "layouts/base.twig" %}

{% block content %}
<article>
    <h1 class="page-title">{{posts[0].type.label}}</h1>
    <div class="shadow-box post-holder">
        {% for post in posts %}
            {% include ['tease-'~post.post_type~'.twig', 'teases/tease.twig'] %}
        {% endfor %}
    </div>
    {% include 'partials/pagination.twig' with {'posts': posts} %}
</article>
{% endblock %}