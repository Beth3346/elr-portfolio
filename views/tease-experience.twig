{% extends "tease.twig" %}

{% block content %}
    <article class="post-full experience">
        <header class="post-header">
            <h3 class="post-box-title"><a href="{{post.get_field('_experience_url')}}">{{post.get_field('_experience_business_name')}}</a></h3>
            <ul class="post-box-meta">
                <li>
                    <i class="fa fa-calendar"></i> {{post.get_field('_experience_start_date')}} - {{post.get_field('_experience_end_date')}}
                </li>
                <li>
                    <i class="fa fa-wrench"></i> {{post.get_field('_experience_role')}}
                </li>
                <li>
                    <i class="fa fa-map-marker"></i> {{post.get_field('_experience_location')}}
                </li>
            </ul>
        </header>
        {% if post.thumbnail.src %}
        <figure class="post-image-holder">
            <a href="{{post.link}}">
                <img src="{{post.thumbnail.src}}" />
            </a>
        </figure>
        {% endif %}
        <div class="post-content">
            {{post.get_content}}
        </div>
    </article>
{% endblock %}